<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="yarpmanifest.xsl"?>
<application>

    <!-- GENERIC INFORMATION -->
    <name>hand-tracking-BATCH</name>
    <description>Offline visual tracking of the iCub hand by means of a 3D model-aided particle filter</description>
    <version>0.4.0</version>

    <authors>
        <author email="claudio.fantacci@iit.it">Claudio Fantacci</author>
    </authors>


    <!-- REQUIRED MODULES -->
    <module>
        <name>hand-tracking</name>
        <parameters>--robot iCub --cam left --laterality right</parameters>
        <node>yarprun</node>
    </module>

    <module>
        <name>hand-tracking</name>
        <parameters>--robot iCub --cam right --laterality right</parameters>
        <node>yarprun</node>
    </module>

    <module>
        <name>yarpdataplayer</name>
        <parameters>--withExtraTimeCol 2</parameters>
        <node>yarprun</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/result/left --x 20 --y 0 --RefreshTime 30</parameters>
        <node>yarprun</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/result/right --x 340 --y 0 --RefreshTime 30</parameters>
        <node>yarprun</node>
    </module>


    <!-- REQUIRED CONNECTIONS -->
    <!-- Particle filter connections -->
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/hand-tracking/left/img:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/hand-tracking/right/img:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/left/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/right/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/left/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/right/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/hand-tracking/left/result/img:o</from>
        <to>/view/result/left</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/hand-tracking/right/result/img:o</from>
        <to>/view/result/right</to>
        <protocol>tcp</protocol>
    </connection>


    <!-- VisualProprioception connections -->
    <connection>
        <from>/icub/head/state:o</from>
        <to>/hand-tracking/VisualProprioception/left/head:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/head/state:o</from>
        <to>/hand-tracking/VisualProprioception/right/head:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/VisualProprioception/left/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/VisualProprioception/right/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/VisualProprioception/left/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/VisualProprioception/right/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

</application>
