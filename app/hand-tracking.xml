<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="yarpmanifest.xsl"?>
<application>

    <!-- GENERIC INFORMATION -->
    <name>hand-tracking</name>
    <description>Visual tracking of the iCub hand by means of a 3D model-aided particle filter</description>
    <version>0.2.1</version>

    <authors>
        <author email="claudio.fantacci@iit.it">Claudio Fantacci</author>
    </authors>


    <!-- REQUIRED MODULES -->
    <module>
        <name>hand-tracking</name>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/result/left --x 20 --y 0 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/result/right --x 340 --y 0 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>


    <!-- REQUIRED CONNECTIONS -->
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/hand-tracking/left_img:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/hand-tracking/right_img:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/head/state:o</from>
        <to>/hand-tracking/head:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/hand-tracking/result/left:o</from>
        <to>/view/result/left</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/hand-tracking/result/right:o</from>
        <to>/view/result/right</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_hand/analog:o</from>
        <to>/hand-tracking/right_hand/analog:i</to>
        <protocol>tcp</protocol>
    </connection>

</application>
