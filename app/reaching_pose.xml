<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="yarpmanifest.xsl"?>
<application>

    <!-- GENERIC INFORMATION -->
    <name>reaching_pose</name>
    <description>This app allows the iCub to reach a pose with the hand. Must be used with the hand-tracking app.</description>
    <version>0.1.0</version>

    <authors>
        <author email="claudio.fantacci@iit.it">Claudio Fantacci</author>
    </authors>


    <!-- REQUIRED MODULES -->
    <module>
        <name>raching</name>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam_left --out /view/cam_left/click:o --x 20 --y 370 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam_right --out /view/cam_right/click:o --x 340 --y 370 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam_left/ee --x 20 --y 740 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpview</name>
        <parameters>--name /view/cam_right/ee --x 340 --y 740 --RefreshTime 30</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpdatadumper</name>
        <node>localhost</node>
        <parameters>--name /datadumper/cam_left/x --txTime --rxTime --type bottle</parameters>
    </module>

    <module>
        <name>yarpdatadumper</name>
        <node>localhost</node>
        <parameters>--name /datadumper/cam_right/x --txTime --rxTime --type bottle</parameters>
    </module>


    <!-- REQUIRED CONNECTIONS -->
    <connection>
        <from>/hand-tracking/result/estimates:o</from>
        <to>/reaching_pose/estimates:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/cartesianController/right_arm/state:o</from>
        <to>/reaching_pose/pose:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/view/cam_left</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/reaching_pose/cam_left/img:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/reaching_pose/cam_left/img:o</from>
        <to>/view/cam_left/ee</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/view/cam_left/click:o</from>
        <to>/reaching_pose/cam_left/click:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/view/cam_right/click:o</from>
        <to>/reaching_pose/cam_right/click:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/view/cam_right</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/reaching_pose/cam_right/img:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/reaching_pose/cam_right/img:o</from>
        <to>/view/cam_right/ee</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/reaching_pose/cam_left/x:o</from>
        <to>/datadumper/cam_left/x</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/reaching_pose/cam_right/x:o</from>
        <to>/datadumper/cam_right/x</to>
        <protocol>tcp</protocol>
    </connection>

</application>
