<?xml version="1.0" encoding="ISO-8859-1"?>
<?xml-stylesheet type="text/xsl" href="yarpmanifest.xsl"?>
<application>

    <!-- GENERIC INFORMATION -->
    <name>hand-tracking-BATCH</name>
    <description>Offline visual tracking of the iCub hand by means of a 3D model-aided particle filter</description>
    <version>0.6.3</version>

    <authors>
        <author email="claudio.fantacci@iit.it">Claudio Fantacci</author>
    </authors>


    <!-- REQUIRED MODULES -->
    <module>
        <name>hand-tracking</name>
        <parameters>--robot icub --play --cam left --laterality right</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>hand-tracking</name>
        <parameters>--robot icub --play --cam right --laterality right</parameters>
        <node>localhost</node>
    </module>

    <module>
        <name>yarpdataplayer</name>
        <parameters>--withExtraTimeCol 2</parameters>
        <node>localhost</node>
    </module>


    <!-- REQUIRED CONNECTIONS -->
    <!-- Particle filter connections -->
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/hand-tracking/left/img:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/hand-tracking/right/img:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/left/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/right/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/left/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/right/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <!-- playFwdKinMotion -->
    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/playFwdKinMotion/left/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/playFwdKinMotion/right/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/playFwdKinMotion/left/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/playFwdKinMotion/right/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <!-- playGatePose -->
    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/playGatePose/left/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/playGatePose/right/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/playGatePose/left/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/playGatePose/right/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <!-- VisualProprioception connections -->
    <connection>
        <from>/icub/head/state:o</from>
        <to>/hand-tracking/VisualProprioception/left/head:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/head/state:o</from>
        <to>/hand-tracking/VisualProprioception/right/head:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/VisualProprioception/left/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/right_arm/state:o</from>
        <to>/hand-tracking/VisualProprioception/right/right_arm:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/VisualProprioception/left/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/icub/torso/state:o</from>
        <to>/hand-tracking/VisualProprioception/right/torso:i</to>
        <protocol>tcp</protocol>
    </connection>

    <!-- iCubProprioception connection for displaying results -->
    <connection>
        <from>/hand-tracking/left/result/estimates:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/left/hand/right_pose:i</to>
        <protocol>tcp</protocol>
    </connection>

    <connection>
        <from>/hand-tracking/right/result/estimates:o</from>
        <to>/iCubProprioception/BatchCADSuperimposer/cam/right/hand/right_pose:i</to>
        <protocol>tcp</protocol>
    </connection>

</application>
